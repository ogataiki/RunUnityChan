<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:lobi="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingRight="@dimen/lobi_rec_padding_default" >

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/lobi_rec_background"
            android:orientation="vertical" >

            <FrameLayout
                android:id="@+id/lobi_rec_popup_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/lobi_rec_padding_default"
                android:paddingLeft="@dimen/lobi_rec_padding_default"
                android:paddingRight="@dimen/lobi_rec_padding_default"
                android:paddingTop="@dimen/lobi_rec_padding_default" >

                <TextView
                    style="@style/lobi_textview_black_large"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lobirec_profile" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/lobi_line_gray_horizontal_repeat" />

            <FrameLayout
                android:id="@+id/lobi_rec_popup_playlist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/lobi_rec_padding_default"
                android:paddingLeft="@dimen/lobi_rec_padding_default"
                android:paddingRight="@dimen/lobi_rec_padding_default"
                android:paddingTop="@dimen/lobi_rec_padding_default" >

                <TextView
                    style="@style/lobi_textview_black_large"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lobirec_video_list" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/lobi_line_gray_horizontal_repeat" />

            <FrameLayout
                android:id="@+id/lobi_rec_popup_help"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/lobi_rec_padding_default"
                android:paddingLeft="@dimen/lobi_rec_padding_default"
                android:paddingRight="@dimen/lobi_rec_padding_default"
                android:paddingTop="@dimen/lobi_rec_padding_default" >

                <TextView
                    style="@style/lobi_textview_black_large"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lobirec_help" />
            </FrameLayout>

            <ListView
                android:id="@android:id/list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:divider="@color/lobi_rec_gray"
                android:dividerHeight="0dp"
                android:fadingEdge="none"
                android:visibility="gone" />
        </LinearLayout>
    </FrameLayout>

</FrameLayout>